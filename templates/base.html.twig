<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {{ encore_entry_script_tags('app') }}
    </head>
    <body>
        <div class="changeLocale">
            {% for locale in locales %}
                {% if locale != app.request.locale %}
                    {% set routeParams = [] %}
                    {% set routeParams = routeParams|merge({
                        '_locale': locale
                    }) %}
                    {% if additionalParams is defined %}
                        {% set routeParams = routeParams|merge(additionalParams) %}
                    {% endif %}
                    <a href="{{ path(app.request.get('_route'), routeParams) }}">{{ locale }}</a>
                {% endif %}
            {% endfor %}
        </div>
        {% block body %}{% endblock %}
        {% block javascripts %}

            {{ include('parts/toast.html.twig') }}
            {{ include('parts/sidenav.html.twig') }}
            {{ include('otsum/js/eventsMercure/eventsMercure.html.twig') }}
{#            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>#}
        {% endblock %}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    </body>
</html>
