{% extends 'base.html.twig' %}

{% block title %}Hello HubController!{% endblock %}

{% block body %}
    <h1 class="text-center">Rejoindre une équipe</h1>
    <div class="container d-flex justify-content-center">
        <section class="row area d-flex justify-content-center">
            <div class="block_bouton col-12 ">
                <div class="row">
                    <div class="col">
                        <div class="form-group form-row mb-2">
                            <div class="col-12 p-0">
                                <!-- Button trigger modal -->
                                <button type="button" class="btn" data-toggle="modal" data-target="#invitationModal">
                                    Inviter
                                </button>
                            </div>
                        </div>
                        {{ form_start(teamForm) }}
                             <div class="form-group form-row">
                                <div class="col-6 p-0">
                                    {{ form_widget(teamForm.team_blue) }}
                                </div>
                                <div class="col-6 p-0">
                                    {{ form_widget(teamForm.team_red) }}
                                </div>
                            </div>
                            {{ form_widget(teamForm.partie) }}
                        {{ form_end(teamForm) }}
                        <!-- Modal -->
                        <div class="modal fade" id="invitationModal" tabindex="-1" role="dialog" aria-labelledby="invitationModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="invitationModalLabel">Inviter un contact</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <ul>
                                            {% for contact in contactList %}
                                                <li class="inviteUser" data-userId="{{ contact.getId() }}">
                                                    <input type="hidden" class="inputUser">
                                                    {% if contact.getAvatar() %}
                                                        <img class="avatar {% if contact.getConnected() == true %}connecte{% endif %}" src="{{ ('images/avatars/'~contact.getAvatar().avatar) | imagine_filter('my_thumb_filter')  }}" alt="avatar">
                                                    {% else %}
                                                        <div class="avatar_par_defaut {% if contact.getConnected()  == true  %}connecte{% endif %}">
                                                            {{ contact.pseudo|first|upper }}
                                                        </div>
                                                    {% endif %}
                                                    {{ contact.pseudo }}
                                                </li>
                                            {% endfor %}
                                        </ul>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                   </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="teams">
                                <div class="row mt-2 w-100">
                                    <div class="card w-100 py-3" style="background: #5454b3ad;">
                                        <div class="row">
                                            <div class="col-12">
                                                <h3>Équipe bleue</h3>
                                            </div>
                                        </div>
                                        <div class="row team_blue">
                                            {% if tablePlayer['blue'] is defined %}
                                                {% for player in tablePlayer['blue'].getPlayers() %}
                                                    <div class="col-3 playerRow">
                                                        <input class="playerId" type="hidden" value="{{ player.getId() }}">
                                                        {% if player.getAvatar() %}
                                                            <img class="avatar {% if player.getConnected() == true %}connecte{% endif %}" src="{{ ('images/avatars/'~player.getAvatar().avatar) | imagine_filter('my_thumb_filter')  }}" alt="avatar">
                                                        {% else %}
                                                            <div class="avatar_par_defaut {% if player.getConnected()  == true  %}connecte{% endif %}">
                                                                {{ player.pseudo|first|upper }}
                                                            </div>
                                                        {% endif %}
                                                        {{ player.pseudo }}
                                                    </div>
                                                {% endfor %}
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                <div class="row  mt-2 w-100" >
                                    <div class="card w-100 py-3" style="background: #b35454ad;">
                                        <div class="row">
                                            <div class="col-12">
                                                <h3>Équipe rouge</h3>
                                            </div>
                                        </div>
                                        <div class="row team_red">
                                            {% if tablePlayer['red'] is defined %}
                                                {% for player in tablePlayer['red'].getPlayers() %}
                                                    <div class="col-3 playerRow">
                                                        <input class="playerId" type="hidden" value="{{ player.getId() }}">
                                                        {% if player.getAvatar() %}
                                                            <img class="avatar {% if player.getConnected() == true %}connecte{% endif %}" src="{{ ('images/avatars/'~player.getAvatar().avatar) | imagine_filter('my_thumb_filter')  }}" alt="avatar">
                                                        {% else %}
                                                            <div class="avatar_par_defaut {% if player.getConnected()  == true  %}connecte{% endif %}">
                                                                {{ player.pseudo|first|upper }}
                                                            </div>
                                                        {% endif %}
                                                        {{ player.pseudo }}
                                                    </div>
                                                {% endfor %}
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script>
        $(document).ready(function(){
            // Si l'utilisateur est connecté
            {% if app.user %}
                //-- Inscription aux topics mercure.
                // Initialisation de l'Url mercure
                const url = new URL('http://localhost:3000/.well-known/mercure')
                // On ajoute le "topic" correspondant aux notifications de l'utilisateur courant
                url.searchParams.append('topic','/hub/prive/' + {{ idGame }})
                //-- On écoute les évènements provenant de mercure
                const eventSource = new EventSource(url)
                eventSource.onmessage = (e) => {
                    // notification nouveau joueur
                    if(JSON.parse(e.data).topic === '/hub/prive/' + {{ idGame }}){
                        // window.location.href = JSON.parse(e.data).url_partie;
                        $.ajax({
                            method: "POST",
                            url: "{{ path('reloadPlayerList') }}",
                            data: {
                                idGame: {{ idGame }}
                            },
                            success: function(data){
                                let arrayTeam = JSON.parse(data);
                                $('.team_blue').empty();
                                $('.team_red').empty();
                                $.each(arrayTeam.blue, function (index, value) {
                                    let avatar;
                                    if(value.avatar){
                                        avatar = "<img class='avatar connecte' src='"+ value.avatar +"' alt='avatar'>";
                                    } else {
                                        avatar = "<div class='avatar_par_defaut' > " +
                                            value.pseudo.slice(0,1).toUpperCase() +
                                            "</div>";
                                    }
                                    $('.team_blue')
                                        .append(
                                            "<div class='col-3 playerRow'>" +
                                            "<input class='playerId' type='hidden' value='"+ value.id_player +"'>" +
                                            avatar +
                                            value.pseudo +
                                            "</div>"
                                        )
                                })
                                $.each(arrayTeam.red, function (index, value) {
                                    let avatar;
                                    if(value.avatar){
                                        avatar = "<img class='avatar connecte' src='"+ value.avatar +"' alt='avatar'>";
                                    } else {
                                        avatar = "<div class='avatar_par_defaut' > " +
                                            value.pseudo.slice(0,1).toUpperCase() +
                                            "</div>";
                                    }
                                    $('.team_red')
                                        .append(
                                            "<div class='col-3 playerRow'>" +
                                            "<input class='playerId' type='hidden' value='"+ value.id_player +"'>" +
                                            avatar +
                                            value.pseudo +
                                            "</div>"
                                        )
                                })
                            }
                        });
                    }
                }
                //-- Désinscription aux topics mercure
                window.addEventListener('beforeunload', function () {
                    if(eventSource != null){
                        eventSource.close()
                    }
                })
                //-- Invitation to play
                $('#invitationModal').on('click','li.inviteUser',function() {
                    $.ajax({
                        method: "POST",
                        url: "{{ path('inviteUser') }}",
                        data: {
                            id_user: $(this).attr("data-userId"),
                            idGame: {{ idGame }}
                        },
                        success: function(data){
                            $("li.inviteUser[data-userId='" + data + "']").remove();
                            $('#invitationModal .modal-body ul').prepend(
                                '<div class="alert alert-success alert-dismissible fade show" role="alert">' +
                                    'Invitation envoyée' +
                                    '<button type="button" class="close" data-dismiss="alert" aria-label="Close">' +
                                        '<span aria-hidden="true">&times;</span>' +
                                    '</button>' +
                                '</div>'
                            );
                        }
                    });
                });
            {% endif %}
        });
    </script>
{% endblock %}
